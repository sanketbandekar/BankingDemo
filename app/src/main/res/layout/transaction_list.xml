<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ead3cb"
    android:padding="7dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffe286">

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Sender :"
        android:textColor="#435560"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/txt_tra_sname"
        android:layout_toRightOf="@id/sender_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:textSize="25sp"
        android:text="Sender Name"
        android:textColor="#151515"/>
    <TextView
        android:id="@+id/receiver_name"
        android:layout_below="@id/sender_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Receiver :"
        android:textColor="#435560"
        android:textSize="25sp"/>
    <TextView
        android:id="@+id/txt_tra_rname"
        android:layout_toRightOf="@id/receiver_name"
        android:layout_below="@id/txt_tra_sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginBottom="7dp"
        android:text="Receiver Name"
        android:textColor="#151515"/>

    <TextView
        android:id="@+id/amount"
        android:layout_below="@id/receiver_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Amount :"
        android:textColor="#435560"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_tra_amt"
        android:layout_below="@id/txt_tra_rname"
        android:layout_toRightOf="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Amount"
        android:layout_marginBottom="10dp"
        android:textColor="#151515"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>